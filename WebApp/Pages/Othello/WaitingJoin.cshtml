@page
@model WebApp.Pages.Othello.WaitingJoinModel
@{
    ViewData["Title"] = "Join";
}


<style>
    body {
        font-family: Arial, sans-serif;
        text-align: center;
        margin: 0;
        padding: 0;
    }
    .user-status {
        color: blue;
        font-size: 1.5em;
        margin-top: 20px;
    }
    .invite-section {
        margin-top: 20px;
    }
    .invite-button {
        display: inline-block;
        padding: 10px 20px;
        font-size: 1.2em;
        color: blue;
        text-decoration: none;
        border: 1px solid black;
        border-radius: 5px;
        cursor: pointer;
    }
    .exit-button {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 10px 20px;
        font-size: 1em;
        border: 1px solid black;
        border-radius: 5px;
        background-color: #f0f0f0;
        cursor: pointer;
    }
</style>
<div class="user-status">
    <span class="a">User1 (ready)</span>
</div>
<div class="invite-section">
    <p>Send this invite link to invite player 2!</p>
    <a href="#" class="invite-button">
        <span class="b">Invite</span>
    </a>
</div>
@* <button class="exit-button">
    <span class="c">Exit</span>
</button> *@
<form method="post" asp-page-handler="Logout">
    <button type="submit" class="exit-button">Exit</button>
</form>

